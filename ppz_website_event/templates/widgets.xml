<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="field_widget_talent_area_id" 
        name="CMS form for talent area">
        <div t-attf-class="radio-select #{widget.w_css_klass}">
                <label t-foreach="widget.w_option_items"  t-as="opt_item" > 
                    <input type="radio" 
                        t-attf-id="{{opt_item.id}}"
                        t-attf-value="{{opt_item.id}}"
                        t-attf-name="talent_area_id" 
                        t-attf-class="form-control"></input>
                        <img
                                t-attf-src="{{request.httprequest.url_root}}web/image/event.talent.area/{{opt_item.id}}/logo" 
                                t-options="{'widget': 'image', 'resize': '300x300'}" 
                                t-att-alt="opt_item.name" />
                        
                            <!--TODO GET t-attf-name from widget
                                 -->
                </label>
    </div>
</template>


<template id="field_widget_session_ids" name="CMS form m2o field widget">

  <select t-attf-class="form-control #{widget.w_css_klass}"
          t-att-name="widget.w_fname"
          t-att-required="widget.w_field['required'] and '1' or None"
          t-att-data-params='widget.w_data_json()'>
    <option class="empty_item" value=""><t t-esc="widget.w_field['string'] + '...'" /></option>
    <t t-foreach="widget.w_option_items" t-as="opt_item">
      <option class="value_item"
              t-att-value="opt_item_index"
              t-att-selected="opt_item == widget.w_field_value">
        <t t-esc="opt_item"/>
      </option>
    </t>
  </select>

</template>

</odoo>
