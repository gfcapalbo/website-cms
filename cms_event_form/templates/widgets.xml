<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="field_widget_talent_area_id" 
        name="CMS form for talent area">
        <div t-attf-class="form-control #{widget.w_css_klass}">
        <div t-attf-class="#{widget.w_css_row_klass}">
            <div t-foreach="widget.w_option_items"  t-as="opt_item" 
                t-attf-class="#{widget.w_css_option_klass}">
                    <a itemprop="url" 
                        href='/event/event_list/' >
                        <span 
                            itemprop="image" 
                            t-attf-content="{{request.httprequest.url_root}}web/image/event.talent.area/{{opt_item.id}}/logo" 
                            t-field="opt_item.logo" 
                            t-options="{'widget': 'image', 'resize': '300x300'}" 
                            t-att-alt="opt_item.name" />
                    </a>
                </div>
            </div>
        </div>
    </template>
</odoo>
